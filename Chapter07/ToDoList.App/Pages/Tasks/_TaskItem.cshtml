@model ToDoList.App.Models.Task

<form method="post">
    <div class="card">
        <div class="card-body p-2">
            <div class="card-title">
                @Model.Title
            </div>
            <a class="btn btn-primary btn-sm" href="/tasks/@Model.Id">View üßê</a>
            @if (Model.Status == Models.ETaskStatus.ToDo)
            {
                <button type="submit" class="btn btn-warning btn-sm" href="@Model.Id" asp-page-handler="StartTask" asp-route-id="@Model.Id">
                    Start üèÅ
                </button>
            }
            @if (Model.Status == Models.ETaskStatus.Doing)
            {
                <button type="submit" class="btn btn-success btn-sm" href="@Model.Id" asp-page-handler="EndTask" asp-route-id="@Model.Id">
                    Finish ‚úÖ
                </button>
            }
        </div>
    </div>
</form>
