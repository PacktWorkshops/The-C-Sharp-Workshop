<Window x:Class="Chapter05.UI.ContinuationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Continuations" SizeToContent="WidthAndHeight">

    <StackPanel Orientation="Horizontal" Margin="8" VerticalAlignment="Center">
        <TextBlock Text="Price:"  VerticalAlignment="Center"/>
        <TextBlock x:Name="TxtPrice" MinWidth="80" Background="DarkGray" Margin="4,0"/>
        <Button Content="Get Price" Click="GetPriceClick"  Margin="4,0"/>
        <Button Content="Get Price Safely" Click="GetPriceSafelyClick"  />
     </StackPanel>
</Window>
